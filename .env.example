# Gigz V2 Environment Configuration
# Copy this file to .env and update values for your environment

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://gigz:password@localhost:5432/gigz_dev
CLICKHOUSE_URL=http://gigz:password@localhost:8123/gigz_analytics
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USERNAME=gigz
CLICKHOUSE_PASSWORD=password
CLICKHOUSE_DATABASE=gigz_analytics

# Redis Configuration
REDIS_URL=redis://:password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=0

# Meilisearch Configuration
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_MASTER_KEY=masterKey123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# External API Keys
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
LASTFM_API_KEY=your_lastfm_api_key
SETLIST_FM_API_KEY=your_setlistfm_api_key
SONGKICK_API_KEY=your_songkick_api_key
MUSICBRAINZ_USER_AGENT=Gigz/1.0.0 (your-email@example.com)

# Cloudflare R2 (File Storage)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=gigz-dev
R2_PUBLIC_URL=https://your-bucket.r2.dev
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# Email Configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@gigz.dev

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@gigz.dev

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STRICT_MAX=10

# Feature Flags
ENABLE_CONCERT_SCRAPING=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_METRICS_COLLECTION=true

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_RETENTION_DAYS=30
LOG_RETENTION_DAYS=7

# Development Tools
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true
CORS_ORIGIN=http://localhost:3000,http://localhost:5173