# API Gateway Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Gateway Configuration
GATEWAY_TIMEOUT=30000
MAX_BODY_SIZE=10485760

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://gigz.app,gigz://app

# Rate Limiting Configuration
RATE_LIMITING_ENABLED=true
RATE_LIMIT_ANONYMOUS=60
RATE_LIMIT_AUTHENTICATED=300

# Service URLs (override defaults)
# AUTH_API_URL=http://auth-api:3001
# CORE_API_URL=http://core-api:3002
# CONCERT_API_URL=http://concert-api:3003
# SEARCH_API_URL=http://search-api:3004

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Logging Configuration
LOG_LEVEL=info
LOG_INCLUDE_HEADERS=false
LOG_INCLUDE_BODY=false
LOG_SLOW_REQUEST_THRESHOLD=1000

# Monitoring Configuration
METRICS_ENABLED=true

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000

# Security Headers (optional)
# SECURITY_HEADERS_ENABLED=true
# HSTS_MAX_AGE=31536000
# X_FRAME_OPTIONS=DENY
# X_CONTENT_TYPE_OPTIONS=nosniff